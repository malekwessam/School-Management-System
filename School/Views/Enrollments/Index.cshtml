@model IEnumerable<School.Models.Enrollment>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (!Model.Any()) { 
    <h4 class="label-default">There Is No Data To Show!</h4>
}
else {
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Course.courseName)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Student.fName)*@
            Full Name
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Student.LName)*@
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Course.courseName)
            </td>
            <td>
                @item.Student.fName @item.Student.LName
                @*@Html.DisplayFor(modelItem => item.Student.fName)*@
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Student.LName)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EnrollmentID }) |
                @Html.ActionLink("Details", "Details", new { id = item.EnrollmentID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EnrollmentID })
            </td>
        </tr>
    }
   
    
</table>
}